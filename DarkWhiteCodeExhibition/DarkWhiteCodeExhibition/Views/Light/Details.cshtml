@{
    ViewData["Title"] = "Details";
    var LightModel = (LightModel)ViewData["LightModel"];
}


        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title"> Name: @LightModel.Name </h5>
                <p class="card-text">Designer Name: @LightModel.DesignerName</p>
              
                <p class="card-text">Image:  <img src="@LightModel.Image" style="max-width:200px" alt="@LightModel.Image"></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Price: @LightModel.Price</li>

            </ul>
        </div>


        <div>
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> }
        <a asp-action="Index">Back to List</a>
        </div>
